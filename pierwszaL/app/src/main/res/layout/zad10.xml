<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/b1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/niebieski"
        android:layout_alignParentStart="true"
        android:text="1" />

    <Button
        android:id="@+id/b2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/czerw"
        android:layout_alignParentEnd="true"
        android:text="2" />
    <Button
        android:id="@+id/b3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/zolt"
        android:layout_alignParentBottom="true"
        android:text="3" />
    <Button
        android:id="@+id/b4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/ziel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="4" />

    <Button
        android:id="@+id/piaty"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/szar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="5" />
    <Button
        android:id="@+id/b6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/szar"
        android:layout_toLeftOf="@id/piaty"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@id/piaty"
        android:text="6" />
    <Button
        android:id="@+id/b7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/szar"
        android:layout_toRightOf="@id/piaty"
        android:layout_marginLeft=
            "10dp"
        android:layout_alignBottom="@id/piaty"
        android:text="7" />

</RelativeLayout>